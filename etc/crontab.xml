<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="freshmail">
        <job name="freshmail_run_subscribers_unsubscribed_from_freshmail"
             instance="Virtua\FreshMail\Cron\UnsubscribedFromFreshMail" method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
        <job name="freshmail_process_request_queue" instance="Virtua\FreshMail\Cron\ProcessRequestQueue" method="execute">
            <schedule>* * * * *</schedule>
        </job>
        <job name="freshmail_abandoned_cart" instance="Virtua\FreshMail\Cron\AbandonedCart" method="execute">
            <schedule>0 5 * * *</schedule>
        </job>
        <job name="freshmail_follow_up_email" instance="Virtua\FreshMail\Cron\FollowUpEmail" method="execute">
            <schedule>*/10 * * * *</schedule>
        </job>
        <job name="freshmail_follow_up_email_abandoned_cart" instance="Virtua\FreshMail\Cron\FollowUpEmail\AbandonedCart" method="execute">
            <schedule>20 5 * * *</schedule>
        </job>
        <job name="freshmail_generate_reports" instance="Virtua\FreshMail\Cron\GenerateReports" method="execute">
            <schedule>0 6 * * *</schedule>
        </job>
        <job name="freshmail_get_email_templates" instance="Virtua\FreshMail\Cron\FreshMailTemplates" method="execute" />
    </group>
</config>
